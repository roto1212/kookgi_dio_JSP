<?xml version="1.0" encoding="UTF-8" ?>
<!-- DOCTYPE이 configuration인 xml파일은 데이버베이스 연결정보와 실행할 sql 명령이 입력된 xml파일의 위치를 입력한다. -->
<!DOCTYPE configuration PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- 데이터베이스 연결정보 -->
	<properties resource="com/koreait/mybatis/db.properties" />
	
	<!-- 별명지정 -->
	<typeAliases>
		<typeAlias type="com.koreait.vo.MvcboardVO" alias="vo"/>
		
	</typeAliases>
	
	<environments default="development">
		<environment id="development">
			<transactionManager type="JDBC" />
			<dataSource type="POOLED">
				<property name="driver" value="${driver}" />
				<property name="url" value="${url}" />
				<property name="username" value="${username}" />
				<property name="password" value="${password}" />
			</dataSource>
		</environment>
	</environments>
	
	<!-- 실행할 sql 명령이 저장된 xml파일  -->
	<mappers>
		<mapper resource="com/koreait/mybatis/mvcboard.xml"/>
		
	</mappers>
</configuration>